#!/usr/bin/env bash

setPlymouth() {
  paru -S --noconfirm plymouth-git
  sudo sed -i 's/^HOOKS=(base systemd/HOOKS=(base systemd sd-plymouth/g' /etc/mkinitcpio.conf
  sudo systemctl disable sddm
  sudo systemctl enable sddm-plymouth
  # TODO: add splash
}

# setPlymouth ## currently broken in VBox

~/.local/src/public-repos/matter/matter.py -i arch arch arch arch microsoft-windows laptop -ff ~/.local/share/fonts/victor-pixel.ttf -fn victor -fs 40
